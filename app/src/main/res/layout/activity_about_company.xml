<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/aboutCompanyTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="О компании"
        android:textSize="24sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:paddingBottom="16dp"/>

    <TextView
        android:id="@+id/aboutCompanyDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Наша компания была основана в 2020 году и с тех пор успешно развивается в сфере технологий и инноваций. Мы стремимся обеспечить наших клиентов качественными продуктами и услугами, удовлетворяя их потребности на каждом этапе сотрудничества. Наша команда состоит из опытных специалистов, которые всегда готовы предложить вам индивидуальные решения."
        android:textSize="16sp"
        android:textColor="#333333"
        android:lineSpacingExtra="8dp"
        android:paddingBottom="16dp"/>

    <TextView
        android:id="@+id/missionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Наша миссия"
        android:textSize="20sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/missionDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Наша миссия — предоставлять клиентам высококачественные продукты, которые способствуют улучшению их жизни. Мы стремимся стать лидером в своей отрасли, продолжая внедрять инновации и лучшие практики."
        android:textSize="16sp"
        android:textColor="#333333"
        android:lineSpacingExtra="6dp"
        android:paddingBottom="16dp"/>

</LinearLayout>
